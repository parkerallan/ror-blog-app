<nav class="navbar navbar-expand navbar-dark bg-dark mb-3 rounded-1">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">MyBlog</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to 'My Posts', posts_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <% if author_signed_in? %>
            <%= link_to 'Logout', destroy_author_session_path, method: :delete, class:"nav-link" %>
          <% else %>
            <%= link_to 'Sign In', author_session_path, class:"nav-link" %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class='row'>
  <% @posts.each do |post| %>
    <div class='col-md-6 col-lg-4'>
      <div class="card post-card mb-3">
        <div class='header-image' style='background-image: url(<%= url_for(post.header_image) %>)'>
        </div>
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= truncate(post.description, length: 200) %></p>
          <%= link_to 'Read', blog_post_path(post), class: 'btn btn-primary mt-auto' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
