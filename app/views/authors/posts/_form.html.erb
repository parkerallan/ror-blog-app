<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group m-2">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control m-2" %>
  </div>

  <div class="form-group m-2">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control m-2" %>
  </div>

   <div class="form-group m-2">
    <%= form.label :header_image %>
    <%= form.file_field :header_image, class: "form-control m-2" %>
    <div class='mt-3'>
    <% if post.header_image.present? %>
      <small>Current Image:</small>
      <%= image_tag(post.header_image, width: '100%') %>
    <% end %>
    </div>
  </div>

  <div class="actions d-grid gap-*">
    <%= form.submit class: "btn btn-primary m-2" %>
  </div>
<% end %>
